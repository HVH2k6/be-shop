<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Phân quyền</title>
  </head>
  <body>
    <div class="container">
      <h1>Phân quyền</h1>


      <% if (relust) { %>
        <div class="d-none" data-relust="<%= JSON.stringify(relust) %>">
        </div>

      
      <table class="table table-hover table-sm" id="table">
            
        <thead>
          <tr>
            <th>Quyền</th>
            <% relust.forEach((role) => { %>
            <th class="text-center" data-role-id="<%= role._id %>">
              <%= role.name_role %>
            </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
            <tr class="d-none" data-name="id">
                <td></td>
                <% relust.forEach((role) => { %>
                <td class="text-center"> 
                    <input type="text" value="<%= role._id %>" class="input-data"/>
                </td>
                <% }) %>
              </tr>
          <tr>
            <td colspan="4"><strong>Các quyền</strong></td>
          </tr>
          <tr data-name="views" >
            <td>Xem</td>
            <% relust.forEach((item) => { %>
            <td class="text-center">
              <input type="checkbox" />
            </td>
            <% }) %>
          </tr>
          <tr data-name="edit" >
            <td>Sửa</td>
            <% relust.forEach((item) => { %>
            <td class="text-center">
              <input type="checkbox" />
            </td>
            <% }) %>
          </tr>
          <tr data-name="delete" >
            <td>Xóa</td>
            <% relust.forEach((item) => { %>
            <td class="text-center">
              <input type="checkbox" />
            </td>
            <% }) %>
          </tr>
        </tbody>
    </table>
    <% } %>
      <div class="mt-3">
        <button class="btn btn-primary" id="btn-submit">Cập nhật</button>
      </div>
    </div>
    <form action="/admin/role/permission" id="form-permission" method="POST">
        <div class="d-none">
            <input type="text" name="permission">
        </div>
    </form>
  </div>

  </body>
  <script src="/js/role.js"></script>
</html>
