<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/page/dashboard.css" />
    
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang quản lý sản phẩm</title>
  </head>
  <body>
   
    <div class="layout-admin">
   
      <div class=""><%- include ("../../layout/admin-slidebar.ejs") %></div>
      <div class="content-dashboard">        
        <h1 class="title">Danh sách sản phẩm</h1>
        <div class="list-dashboard-product">
          <div class="mb-4">
              <div class="row">
                  
                
                <%- include ("../../layout/fillter.ejs") %>
                  
              </div>
          </div>
          <div class="mb-4">     
            <%- include("../../../components/form-category-change.ejs") %>
             
          </div>
          <div class="mb-4">
            <h3 class="title mb-2">Sắp xếp</h3>
            <div >
              <%- include("../../../components/sort-form.ejs") %>
            </div>
          </div>
      </div>
      
          <table class="table" check-multiple>
            <thead>
              <tr>
                <th scope="col">
                    <input class="form-check-input" type="checkbox" value="" name="checkAll">
                </th>
                <th scope="col">Stt</th>
                <th scope="col">Hình ảnh</th>
                <th scope="col">Tên sản phẩm</th>
                

                <th scope="col">Vị trí</th>

                <th scope="col">Trạng thái</th>
                <th scope="col">Hành động</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach((item, index) => { %>
              <tr>
                <td>  <input class="form-check-input" type="checkbox" value="<%- item._id %>" name="id"/></td>
                <th scope="row"><%- index + 1 %></th>
                <td>
                  <img
                    src="<%- item.image_category %>"
                    
                    class="img-product"
                    loading="lazy"
                  />
                </td>
                <td><%- item.name_category %></td>
                
                <!-- <td><%- item.quantity %></td> -->
                <td>
                  <input type="number" style="width: 60px" name="position" min="1" value="<%- item.position %>">
                </td>
                <td>
                  <% if (item.status == "active") { %>
                  <a
                    class="status-active"
                    href="javascript:;"
                    data-id="<%- item._id %>"
                    data-status="<%- item.status %>"
                    button_change_status
                    >hoạt động</a
                  >
                  <% } else { %>
                  <a
                    class="status-inactive"
                    href="javascript:;"
                    data-id="<%- item._id %>"
                    data-status="<%- item.status %>"
                    button_change_status
                    >không hoạt động</a
                  >
                  <% } %>
                </td>
                <td>
                  <div class="active">
                    <a href="/admin/category/<%- item._id %>" class="btn btn-info">Xem chi tiết</a>

                    <a href="/admin/category/edit/<%- item._id %>" class="btn btn-primary">Sửa</a>
                    <button type="button" class="btn btn-danger btn-delete" data-id="<%- item._id %>">Xóa</button>
                  </div>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>

   
        </div>
      </div>
      <form data-path="/admin/category" id="form-status" method="POST"></form>
      <form  data-path="/admin/category/delete" method="POST" id="form-delete"></form>
    </div>
  </body>
  <script src="/js/script.js"></script>
  <script src="/js/form.js"></script>
  
</html>
