<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang tài khoản</title>
  </head>
  <body>
   <div class="layout-admin">
    <%- include ("../../layout/admin-slidebar.ejs") %>
    <div class="container">
      <h1>Danh sách tài khoản</h1>
      <table class="table table-hover table-sm">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Tên</th>
                  <th>Avatar</th>
                  <th>Email</th>
                  <th>Số điện thoại</th>
                  <th>Vai trò</th>

                </tr>
            </thead>
            <tbody>
            <% if (account) { %>
          <% account.forEach((item) => { %>
            <tr>
              <td><%= item._id.length>10 ? item._id.substring(0, 10) + "..." : item._id %></td>
              <td><%= item.name_account %></td>
              <td><img src="<%=item.avatar_account%>" alt="" class="image_table" /></td>
              <td><%=item.email_account %></td>
              <td><%=item.phone_number %></td>
              <td><%=item.role.name_role %></td>
            </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
      
    </div>
   </div>
  </body>
</html>
