<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/reset.css" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="layout-admin">
      <%- include ("../../layout/admin-slidebar.ejs") %>
      <div class="container pt-5">
        <div class="">
            <h2 class="title">Tạo tài khoản</h2>
          <form action="" class="mt-5" autocomplete="off" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
              <label for="" class="form-label">Họ và tên</label>
              <input
                type="text"
                class="form-control"
                name="name_account"
                value=""
              />
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Email</label>
              <input type="email" name="email_account" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Mật khẩu</label>
              <input type="text" class="form-control" name="password_account" />
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Số điện thoại</label>
                <input type="tel" name="phone_number" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Avatar</label>
              <input type="file" name="avatar_account" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="" class="form-label">Vai trò</label>
              <select name="role_id" id="" class="form-select">
                <% if(role) {%>
                  <% role.forEach(item => { %>
                    <option value="<%- item._id %>"><%- item.name_role %></option>
                  <% }) %>
                <% } %>
              </select>
            </div>
            <div class="mb-3">
                <label for="">Trạng thái</label>
                <div class="mt-2">
                    <%- include ("../../../components/status.ejs") %>
                </div>
            </div>
            <div class="">
                <button class="btn btn-primary">Tạo</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
